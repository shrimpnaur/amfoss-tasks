def generate_diamond(rows):
    # Upper part of the diamond (including the middle row)
    for i in range(rows):
        # Print leading spaces
        for j in range(rows - i - 1):
            print(" ", end="")
        # Print asterisks
        for k in range(2 * i + 1):
            print("*", end="")
        # Move to the next line
        print()

    # Lower part of the diamond
    for i in range(rows - 2, -1, -1):
        # Print leading spaces
        for j in range(rows - i - 1):
            print(" ", end="")
        # Print asterisks
        for k in range(2 * i + 1):
            print("*", end="")
        # Move to the next line
        print()

# Read the number of rows from input.txt
with open("inputstar.txt", "r") as inputstar_file:
    rows = int(inputstar_file.read().strip())

# Generate the diamond pattern
generate_diamond(rows)

