with open('inputstar.txt', 'r') as file:
    n = int(file.readline().strip())
if n % 2 == 0:
    n += 1

pattern = ""

for i in range(1, n + 1, 2):
    pattern += ' ' * ((n - i) // 2) + '*' * i + '\n'
for i in range(n - 2, 0, -2):
    pattern += ' ' * ((n - i) // 2) + '*' * i + '\n'

with open('outputstar.txt', 'w') as file:
    file.write(pattern)
